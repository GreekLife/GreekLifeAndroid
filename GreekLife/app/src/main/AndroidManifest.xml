<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fraternityandroid.greeklife">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name=".permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="fraternityandroid.greeklife.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="fraternityandroid.greeklife.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoblack"
        android:label="FratBase"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InfoActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AccountDetailsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MasterControlsActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MembersActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MasterPostToHomeActivity"
            android:parentActivityName=".MasterControlsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConstitutionViewer"
            android:parentActivityName=".InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ManageUserActivity"
            android:parentActivityName=".MasterControlsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewProfileActivity"
            android:parentActivityName=".MembersActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".BETAActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ForumActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateForumActivity"
            android:parentActivityName=".ForumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForumCommentActivity"
            android:parentActivityName=".ForumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PollActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreatePollActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName=".PollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VotingActivity"
            android:parentActivityName=".PollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CalendarActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait" />
        <activity android:name=".EditInfoActivity"
            android:parentActivityName=".CalendarActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MessengerActivity"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MessagingInterfaceActivity"
            android:parentActivityName=".MessengerActivity"
            android:screenOrientation="portrait"
            />
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>