<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fraternityandroid.greeklife.MainActivity"
    tools:layout_editor_absoluteY="50dp">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/logo3generic"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="102dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/code2"
                android:textAlignment="center"
                android:textColor="#FFDF00" />

            <EditText
                android:id="@+id/code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/code3"
                android:textAlignment="center"
                android:textColor="#FFDF00" />

            <EditText
                android:id="@+id/code3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/code4"
                android:textAlignment="center"
                android:textColor="#FFDF00" />

            <EditText
                android:id="@+id/code4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#FFDF00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:alpha="0.5"
                android:background="#0d0d0d"
                android:ems="10"
                android:hint="Email or username"
                android:inputType="textEmailAddress"
                android:singleLine="false"
                android:textColor="#ffffff"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="71dp"
                tools:layout_editor_absoluteY="357dp" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:alpha="0.5"
                android:background="#0d0d0d"
                android:ems="10"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="71dp"
                tools:layout_editor_absoluteY="400dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:backgroundTint="#7b1e7ce6"
            android:textColor="#181818"
            android:onClick="Login"
            android:padding="7dp"
            android:text="Login"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:onClick="CreateAccount"
                android:text="Create Account"
                android:background="#00252525"
                android:textColor="#c1ffdf00" />

            <Button
                android:id="@+id/ForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ForgotPassword"
                android:layout_weight="1"
                android:textColor="#c1ffdf00"
                android:background="#00252525"
                android:layout_gravity="bottom"
                android:text="Forgot Password" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

