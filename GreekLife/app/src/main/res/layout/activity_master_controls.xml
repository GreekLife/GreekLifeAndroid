<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAAA"
    tools:context="fraternityandroid.greeklife.MasterControlsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#141A6E"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#FFDF00"
                android:textSize="20sp"
                tools:text="Master Controls" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:layout_marginBottom="10dp"
                    android:text="1985" />

                <Button
                    android:id="@+id/GenerateCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:textColor="#FFDF00"
                    android:layout_marginBottom="10dp"
                    android:text="Generate new code" />

                <Button
                    android:id="@+id/Kick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:textColor="#FFDF00"
                    android:layout_marginBottom="10dp"
                    android:text="Kick a member" />

                <Button
                    android:id="@+id/PostHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:textColor="#FFDF00"
                    android:layout_marginBottom="10dp"
                    android:text="Post to home page" />

                <Button
                    android:id="@+id/Notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:textColor="#FFDF00"
                    android:layout_marginBottom="10dp"
                    android:text="Send a Custom Notification" />

                <Button
                    android:id="@+id/Validate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#141A6E"
                    android:textColor="#FFDF00"
                    android:layout_marginBottom="10dp"
                    android:text="Validate New Users" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
