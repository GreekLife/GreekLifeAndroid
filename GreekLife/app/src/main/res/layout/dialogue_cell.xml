<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:background="#222">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialogueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Dialogue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/lastMessageTimeSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time/date"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lastSenderAndMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Sender: The last message that was sent to the dialogue."
            android:maxLines="1"
            android:paddingTop="5dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>